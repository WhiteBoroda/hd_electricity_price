<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Separate settings view without inheritance -->
        <record id="res_config_settings_view_form_electricity_price_standalone" model="ir.ui.view">
            <field name="name">res.config.settings.electricity.price.standalone</field>
            <field name="model">res.config.settings</field>
            <field name="arch" type="xml">
                <form string="Налаштування цін на електроенергію">
                    <header>
                        <button name="execute" string="Зберегти" type="object" class="oe_highlight"/>
                        <button string="Скасувати" class="btn-secondary" special="cancel"/>
                    </header>
                    <sheet>
                        <div class="app_settings_block">
                            <h2>Налаштування API ENTSO-E</h2>
                            <div class="row mt16 o_settings_container">
                                <div class="col-12 col-lg-6 o_setting_box">
                                    <div class="o_setting_right_pane">
                                        <label for="entsoe_api_base_url" class="o_form_label">Базовий URL API ENTSO-E</label>
                                        <div class="text-muted">
                                            Базовий URL для запитів до ENTSO-E Transparency Platform API.
                                        </div>
                                        <div class="content-group">
                                            <div class="mt16">
                                                <field name="entsoe_api_base_url" placeholder="https://transparency.entsoe.eu/api"/>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12 col-lg-6 o_setting_box">
                                    <div class="o_setting_right_pane">
                                        <label for="entsoe_api_token" class="o_form_label">Токен безпеки API ENTSO-E</label>
                                        <div class="text-muted">
                                            Ваш персональний токен безпеки для доступу до API ENTSO-E.
                                            Отримайте його на <a href="https://transparency.entsoe.eu/content/static_content/Static%20content/web%20api/Guide.html" target="_blank">сайті ENTSO-E</a>.
                                        </div>
                                        <div class="content-group">
                                            <div class="mt16">
                                                <field name="entsoe_api_token" password="True" placeholder="Введіть ваш API токен"/>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Action for standalone settings -->
        <record id="res_config_settings_action_electricity_price" model="ir.actions.act_window">
            <field name="name">Налаштування</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.config.settings</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="res_config_settings_view_form_electricity_price_standalone"/>
            <field name="target">new</field>
            <field name="context">{'module': 'hd_electricity_price'}</field>
        </record>
    </data>
</odoo>